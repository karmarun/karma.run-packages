{
  "private": true,
  "engines": {
    "node": "^12.0.0",
    "yarn": "^1.17.0"
  },
  "scripts": {
    "clean": "run-p clean:**",
    "build": "run-s --print-label build:utility build:graphql build:webpack build:react build:icons build:cms-kit build:cms-kit-example",
    "watch": "run-p --print-label watch:*",
    "publish": "run-s --print-label publish:utility publish:graphql publish:webpack publish:react publish:cms-kit",
    "clean:icons": "yarn workspace @karma.run/icons clean",
    "build:icons": "yarn workspace @karma.run/icons build",
    "watch:icons": "yarn workspace @karma.run/icons watch",
    "download:icons": "yarn workspace @karma.run/icons download",
    "publish:icons": "yarn workspace @karma.run/icons publish",
    "clean:cms-kit": "yarn workspace @karma.run/cms-kit clean",
    "build:cms-kit": "yarn workspace @karma.run/cms-kit build",
    "watch:cms-kit": "yarn workspace @karma.run/cms-kit watch",
    "publish:cms-kit": "yarn workspace @karma.run/cms-kit publish",
    "clean:react": "yarn workspace @karma.run/react clean",
    "build:react": "yarn workspace @karma.run/react build",
    "watch:react": "yarn workspace @karma.run/react watch",
    "publish:react": "yarn workspace @karma.run/react publish",
    "clean:webpack": "yarn workspace @karma.run/webpack clean",
    "build:webpack": "yarn workspace @karma.run/webpack build",
    "watch:webpack": "yarn workspace @karma.run/webpack watch",
    "publish:webpack": "yarn workspace @karma.run/webpack publish",
    "clean:utility": "yarn workspace @karma.run/utility clean",
    "build:utility": "yarn workspace @karma.run/utility build",
    "watch:utility": "yarn workspace @karma.run/utility watch",
    "publish:utility": "yarn workspace @karma.run/utility publish --scope",
    "clean:graphql": "yarn workspace @karma.run/graphql clean",
    "build:graphql": "yarn workspace @karma.run/graphql build",
    "watch:graphql": "yarn workspace @karma.run/graphql watch",
    "publish:graphql": "yarn workspace @karma.run/graphql publish",
    "clean:cms-kit-example": "yarn workspace @karma.run/cms-kit-example clean",
    "build:cms-kit-example": "yarn workspace @karma.run/cms-kit-example build",
    "watch:cms-kit-example": "yarn workspace @karma.run/cms-kit-example watch",
    "start:cms-kit-example": "yarn workspace @karma.run/cms-kit-example start",
    "clean:graphql-example": "yarn workspace @karma.run/graphql-example clean",
    "build:graphql-example": "yarn workspace @karma.run/graphql-example build",
    "watch:graphql-example": "yarn workspace @karma.run/graphql-example watch",
    "start:graphql-example": "yarn workspace @karma.run/graphql-example start"
  },
  "workspaces": ["packages/*", "examples/*"],
  "devDependencies": {
    "webpack": "^4.35.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "husky": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern 'packages/**/*.{js,ts,tsx,json}'"
    }
  }
}
