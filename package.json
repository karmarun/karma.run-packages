{
  "private": true,
  "engines": {
    "node": "^10.0.0",
    "yarn": "^1.16.0"
  },
  "scripts": {
    "clean": "run-p clean:**",
    "build": "run-s --print-label build:webpack build:react build:editor build:example-editor",
    "watch": "run-p --print-label watch:*",
    "clean:editor": "yarn workspace @dudagroup/editor clean",
    "build:editor": "yarn workspace @dudagroup/editor build",
    "watch:editor": "yarn workspace @dudagroup/editor watch",
    "clean:react": "yarn workspace @dudagroup/react clean",
    "build:react": "yarn workspace @dudagroup/react build",
    "watch:react": "yarn workspace @dudagroup/react watch",
    "clean:webpack": "yarn workspace @dudagroup/webpack clean",
    "build:webpack": "yarn workspace @dudagroup/webpack build",
    "watch:webpack": "yarn workspace @dudagroup/webpack watch",
    "clean:example-editor": "yarn workspace @dudagroup/example-editor clean",
    "build:example-editor": "yarn workspace @dudagroup/example-editor build",
    "watch:example-editor": "yarn workspace @dudagroup/example-editor watch"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "services/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "husky": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern '{examples,packages,services}/**/*.{js,ts,tsx,json}'"
    }
  }
}
